<%- include('partials/_header'); -%>

<div class="container-fluid mt-4">
    <h2>
        Reseñas calientes
    </h2>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <td>n°</td>
                            <td>Nombre Pelicula</td>
                            <td>Calificación</td>
                            <td>Alter ego</td>
                            <td>Comentarios</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data) { %>
                        <% for (var i=0; i< data.length;i++){%>
                        <tr>
                            <td><%=(i+1)%></td>
                            <td><%= data[i].nombre_p %></td>
                            <td><%= data[i].calificacion %></td>
                            <td><%= data[i].alter_ego %></td>
                            <td><%= data[i].comentarios %></td>
                        </tr>
                        <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-5">
                <h1>Agregar Nueva calificacion</h1>
                <div class="card-body">
                    <form action="resenia_caliente/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="id_pelicula" placeholder="Identificador de la pelicula" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="alter_ego" placeholder="alter_ego" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="comentarios" placeholder="Comentarios"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" name="calificacion" placeholder="calificacion" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">
                            Guardar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <%- include('partials/_footer'); -%>
</div>