<%- include('partials/header') -%>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="post">
                            <div class="form-group">
                                <input type="text" name="nombre" value="<%= data.nombre %>" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="date" name="fechaEstreno" value="<%= data.fecha_estreno %>" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="sinopsis" value="<%= data.sinopsis %>" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="casa_productora" value="<%= data.casa_productora %>" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="id" value="<%= data.nombre %>" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="rankingC" value="<%= data.ranking_caliente %>" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="rankingE" value="<%= data.ranking_estable %>" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">Actualizar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>