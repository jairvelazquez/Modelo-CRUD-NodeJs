<%- include('partials/_header'); -%>
  <div class="row">
    <div class="col-md-5">
        <div class="card-body">
          <form action="/peliculas/addPart" method="POST"">
            <legend>Agregar participacion</legend>
            <div class="form-group">
              <input type="number" name="id_personalidad" placeholder="id personalidad" class="form-control" autofocus>
            </div> 
            <div class="form-group">
              <input type="number" name="id_pelicula" placeholder="id pelicula" min="1" max="5" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="rol" placeholder="rol" class="form-control">
              </div>
            <button type="submit" class="btn btn-primary">
              Guardar
            </button>
          </form>
        </div>
      </div>
  </div> 
</div>

<%- include('partials/_footer'); -%>